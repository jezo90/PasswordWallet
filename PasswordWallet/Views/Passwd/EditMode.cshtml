@model PasswordWallet.Models.AppViewModel

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">
            Passwords List
        </h2>
    </div>
    <div class="col-3">
        <a asp-action="SetReadMode" asp-controller="Passwd" class="btn btn-secondary form-control text-white">
            Switch to Read Mode
        </a>
    </div>
    <div class="col-3">
        <a asp-action="Upsert" asp-controller="Passwd" class="btn btn-info form-control text-white">
            Add new data
        </a>
    </div>
    <span class="text-danger">@Model.Error</span> <br />
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Login</th>
                    <th>Password</th>
                    <th>Web</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/passwdListEdit.js"></script>
}
