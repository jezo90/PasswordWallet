@model PasswordWallet.Models.AppViewModel

<h2 class="text-info">
    Change password
</h2>
<br />

<div class="border container" style="padding: 30px;">
    <form method="post" asp-action="Change">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label>Current password:</label>
            </div>
            <div class="col-6">
                <input name="currentPassword" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>New password:</label>
            </div>
            <div class="col-6">
                <input name="newPassword" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    Change
                </button>
            </div>
            <div class="col-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-success form-control">Back to home</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

